{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "zsh@latest", // Shell interactif puissant avec plugins et thèmes
    "kubectl@latest", // Client CLI pour interagir avec les clusters Kubernetes
    "kubecolor@latest", // Coloration syntaxique pour kubectl (alias k)
    "kubectx@latest", // Changement rapide de contexte/cluster K8s (alias ctx)
    "k9s@latest", // Interface terminal pour monitoring Kubernetes (alias kn)
    "kubernetes-helm@latest", // Gestionnaire de paquets pour Kubernetes
    "argocd@latest", // GitOps CD pour Kubernetes
    "minio-client@latest", // Client pour stockage objet S3-compatible (alias mc)
    "skopeo@latest", // Gestion d'images containers/registries
    "sops@latest", // Gestion de secrets chiffrés
    "go-task@latest", // Task runner pour automatiser des tâches (alias t)
    "eza@latest", // Remplacement moderne de ls avec icônes (alias ls/ll/la)
    "jq@latest", // Parser et manipulateur JSON en ligne de commande
    "yq@latest", // Parser et manipulateur YAML en ligne de commande
    "bat@latest", // Remplacement de cat avec coloration syntaxique
    "fzf@latest", // Fuzzy finder pour recherche interactive
    "tree@latest", // Affichage arborescent des répertoires (alias t2/t3)
    "iftop@latest", // Monitoring réseau en temps réel (alias network)
    "btop@latest", // Monitoring système moderne (alias top)
    "direnv@latest", // Gestion automatique d'environnement par répertoire
    "neofetch@latest", // Affichage système stylé (fallback pour fastfetch)
    "glow@latest", // Rendu Markdown dans le terminal
    "zellij@latest", // Terminal multiplexer moderne
    "neovim@latest", // Éditeur de texte moderne (alias v)
    "fastfetch@latest", // Affichage système rapide (alias ff)
    "zoxide@latest", // Navigation intelligente avec cd amélioré
    "fd@latest", // Remplacement moderne de find
    "yazi@latest", // Gestionnaire de fichiers terminal (alias y)
    "ripgrep@latest", // Recherche de texte ultra-rapide (rg)
    "lazygit@latest", // Interface Git simplifiée (alias lg)
    "gum@latest", // Outils pour créer des interfaces CLI interactives
    "ncurses@latest", // Bibliothèque pour interfaces terminal
    "opencode@latest",
    "age@latest",
    "stow@latest", // Assistant CLI pour développement
  ],
}
